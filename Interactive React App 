  <title>Interactive React App</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      transition: background 0.3s, color 0.3s;
    }

    .app {
      text-align: center;
      padding: 50px;
      background: yellow;
      color: blue;
      min-height: 100vh;
    }

    .dark {
      background: #222;
      color: maroon;
    }

    button {
      padding: 10px 20px;
      font-size: 1rem;
      margin: 10px;
      cursor: pointer;
    }

    input {
      padding: 8px;
      font-size: 1rem;
      margin-top: 10px;
    }

    .message {
      margin-top: 20px;
      font-size: 1.2rem;
    }

    .clock {
      font-size: 1.5rem;
      margin-top: 20px;
      font-weight: bold;
    }
  </style>
